{
    "manifest_version": 3,
    "name": "Impulse Purchase Blocker (Streaming)",
    "version": "2.0",
    "description": "Uses webcam streaming and Hume AI to analyze emotions on checkout pages.",
    "permissions": [
      "storage",
      "scripting",
      "offscreen",
      "tabs" 
    ],
    "host_permissions": [
      "*://*.amazon.com/*",
      "*://*.amazon.co.uk/*",
      "*://*.amazon.ca/*",
      "https://api.hume.ai/*",
      "wss://api.hume.ai/*"
    ],
    "options_page": "options.html",
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": [
          "*://*.amazon.com/checkout/*"
        ],
        "js": ["content.js"],
        "run_at": "document_start" 
      }
    ],
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }